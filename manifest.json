{
    "manifest_version": 2,
    "name": "Google Gemini Toggle",
    "version": "1.0",
    "description": "Adds toggle switch for Gemini results on Google searches",
    "icons": {
        "48": "icons/gemini-toggle-48.png",
        "96": "icons/gemini-toggle-96.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.google.com/search*",
        "storage"
    ],
    "background": {
        "scripts": [
            "googleGeminiToggle.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/search*"
            ],
            "js": [
                "toggleContent.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "*://*.google.com/search*"
            ],
            "js": [
                "messaging.js"
            ],
            "run_at": "document_start"
        }
    ]
}